/**app.wxss**/
@import 'weui.wxss';

page {
  height: 100%;
}

text {
  display: inline-block;
}

.container {
  height: 100%;
}

.clearfix:after {
  content: ".";
  clear: both;
  display: block;
  height: 0;
  overflow: hidden;
  visibility: hidden;
}

.nodata {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.nodata image {
  width: 379rpx;
  height: 412rpx;
}

.loading {
  font-size: 34rpx;
  text-align: center;
  color: #333;
  -webkit-animation: shake 1.6s infinite;
  animation: shake 1.6s infinite;
}

.noMore {
  font-size: 34rpx;
  text-align: center;
  color: #333;
}

/*闪烁动画 */
@-webkit-keyframes shake {
  0% {
    opacity: 1;
  }

  50% {
    opacity: 0.5;
  }

  100% {
    opacity: 1;
  }
}

@keyframes shake {
  0% {
    opacity: 1;
  }

  50% {
    opacity: 0.5;
  }

  100% {
    opacity: 1;
  }
}
